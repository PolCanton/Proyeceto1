<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_anuncios"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#227C9D"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">


    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="696dp"
        android:padding="16dp">


        <TextView
            android:id="@+id/emailnombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Texto ejemplo"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailtelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailnombre"
            android:text="Texto ejemplo"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emaildireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailtelefono"

            android:text="Texto ejemplo"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailcorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emaildireccion"

            android:text="Texto ejemplo"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>